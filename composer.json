{
    "name": "ngmy/typed-array",
    "type": "library",
    "description": "The typed array for PHP",
    "keywords": [
        "typed array",
        "array",
        "type"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Yuta Nagamiya",
            "email": "y.nagamiya@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "require-dev": {
    },
    "autoload": {
        "psr-4": {
            "Ngmy\\TypedArray\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Ngmy\\TypedArray\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": [
            "@phpunit"
        ],
        "lint": [
            "@phpcs",
            "@phpstan",
            "@psalm"
        ],
        "fmt": [
            "@phpcbf",
            "@php-cs-fixer"
        ],
        "doc": [
            "@phpdoc"
        ],
        "php-cs-fixer": [
            "@php tools/php-cs-fixer fix --ansi"
        ],
        "phpcbf": [
            "@php tools/phpcbf"
        ],
        "phpcs": [
            "@php tools/phpcs"
        ],
        "phpdoc": [
            "@php tools/phpDocumentor --force"
        ],
        "phpstan": [
            "@php tools/phpstan analyse --ansi"
        ],
        "phpunit": [
            "@php tools/phpunit --colors=always"
        ],
        "psalm": [
            "@php tools/psalm --no-cache"
        ]
    }
}
